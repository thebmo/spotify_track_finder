<h1>Band Search</h1>
Search for: <%= params[:band_name].titleize %><br>
Total Tracks: <%= @tracks.count %>
<% if params[:render] %>
    <table border=1>
    <tr><th>artist</th><th>track title</th><th>album</th><th>URI</th></tr>
    <% @tracks.each do |track| %>
        <tr>
        <td><%= track.artists.first.name %></td>
        <td><%= track.name %></td>
        <td><%= track.album.name %></td>
        <td><%= track.uri %></td>
        </tr>
    <% end %>
   </table>
<% end %>
